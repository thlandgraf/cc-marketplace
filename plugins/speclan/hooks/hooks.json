{
  "description": "SPECLAN plugin hooks for context detection",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PLUGIN_ROOT/hooks/scripts/detect-context.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
